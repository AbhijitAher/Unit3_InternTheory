    <div id="main">
        <h5>Cart</h5>
        <div id="content">
            <div id="cart">
                <% var total = 0 %>
                <% carts_data.forEach(function(el){%>
                    <div>
                        <img style="width: 150px;"src=<%= el.image_url %>/>
                        <p><%= el.course_name %></p>
                        <p><%= el.price %></p>
                       <% total = total+ Number(el.price) %>
                    </div>
                    <% }) %>
