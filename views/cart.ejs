             -->
            </div>
            <div id= "checkout-box">
                <div id="checkout">
                    <div id="amount" class="bottom_border">
                        <p class="top_p">Amount</p>
                        <p id="amountvalue"> <%= total %></p>
                    </div>
                    
                    <div id="cgst" class="bottom_border">
                        <p class="top_p">CGST 9%</p>
                        <% var cgst =  Math.ceil(total*0.09) %>
                        <p id="cgstvalue"><%= cgst %></p>
                    </div>
                    
                    <div id="sgst" class="bottom_border">
                        <p class="top_p">SGST 9%</p>
                        <% var sgst = Math.ceil(total*0.09) %>
                        <p id="sgstvalue"><%= sgst %></p>
                    </div>
                    
                    <div id="total">
                        <h3>Total:</h3>
                        <p><%= Math.ceil(total+(cgst+sgst)) %></p>
                    </div>
                    <div id="coupon">
                        <input type="text" placeholder="Coupon Code"/>
                        <button type="submit" class="go">Go</button>
                    </div>
                    <div id="checkout_btn">
                        <button class="checkout_button" onclick=location.href="http://localhost:2345/Payment-Options">CHECKOUT</button>
                    </div>
                </div>
            </div>
        </div>
    </div>






