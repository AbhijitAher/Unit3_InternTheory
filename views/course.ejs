            color: rgba(0, 0,0, 0.87);
        }
        #online_course .p_des{
            margin-left: 15px;
            margin-right: 15px;
            text-align: left;
            font-weight: 400;
            font-size: 14px;
            line-height: 21px;
            color: rgba(0, 0,0, 0.54);
            margin-top: 3px;
        }
        #online_course .p_price{
