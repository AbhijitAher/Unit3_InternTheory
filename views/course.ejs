            text-align: right;
            line-height: 23px;
            font-size: 18px;
            font-weight: 700;
            color: rgba(0, 0,0, 0.87);
            font-family: 'Roboto', sans-serif;  
        }
        #online_course .p_emi{
            margin-right: 15px;
            text-align: right;
            font-weight: 700;
            font-size: 14px;
            line-height: 21px;
            color: #ffb326;
        }
        .button{
            height: 30px;
            border: none;
            background-color: rgb(224, 5, 5);
            color: white;
            font-family: 'Roboto', sans-serif;
            border-radius: 4px;
            float: right;
            box-shadow: 0px 1px 5px 0px rgb(0 0 0 / 20%), 0px 2px 2px 0px rgb(0 0 0 / 14%), 0px 3px 1px -2px rgb(0 0 0 / 12%);
            font-weight: 500;
            font-size: 13px;
            line-height: 23px;
            padding: 4px 8px;
            min-width: 64px;
            font-size: 0.8125rem;
            margin: 10px 5px 10px 0px;
        }
        .button:hover{
          background-color: rgb(94, 2, 2);
        }
        .button1{
          border: none;
            height: 30px;
            color: rgb(0, 162, 255);
            background-color: white;
            font-family: 'Roboto', sans-serif;
            margin-top: 12px;
            border-radius: 4px;
            float: right;
            font-weight: 500;
            font-size: 13px;
            line-height: 23px;
            padding: 4px 8px;
            min-width: 64px;
            font-size: 0.8125rem;
            margin: 10px 0px 10px 0px;
        }
        .button1:hover{
          background-color: rgb(222, 247, 252);
        }
        #online_course .p_line{
            margin: 10px 10px 0 10px;
            font-size: 18px;
            text-align: right;
            color: gray;
        }

        #main {
            width: 100%;
            height: 30%;
            margin-top: 50px;
            background-color: #446478;
            font-family: 'Roboto', sans-serif;
            color: white;
            font-size: 14px;
            line-height: 21px;
            font-weight: 400;
        }
        #content {
            padding: 1% 8%;
        }
        #upper_part {
            display: grid;
            grid-template-columns: 10% 25% 25% 25%;
            gap: 3%;
            margin: auto;
        }
        #detail {
            display: grid;
            grid-template-columns: 10% 10% 10% 10% 10% 10% 10% 10%;
            gap: 2%;
            border-bottom: 1px solid rgb(204, 200, 200);
        }
        #year {
            text-align: center;
        }
        #upper_part{
            padding-top: 30px;
        }
        #upper_part p{
            padding-top: 10px;
        }
        #upper_part h4 {
            border-bottom: 1px solid rgb(207, 202, 202);
            padding-bottom: 10px;
            color: white;
            font-size: 14px;
            line-height: 21px;
            font-weight: 400;
        }
        #upper_part h3 {
            font-size: 14px;
            color: white;
            font-size: 14px;
            line-height: 21px;
            font-weight: 400;
        }
        #lower_part{
            padding-top: 30px;
        }
        #lower_part h3{
          font-size: 14px;
            color: white;
            font-size: 14px;
            line-height: 21px;
            font-weight: 400;
        }
        #main img {
            width: 20%;
            margin: 5px;
        }
        #image {
            margin-top: 50px;
            display: flex;
            flex-direction: column;
        }
        #detail{
            padding-left: 50px;
            text-align: center;
        }
      </style>
